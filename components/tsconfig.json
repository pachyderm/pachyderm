{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
  },
  "include": [
    "./src/global.d.ts",
    "./src"
  ],
  "exclude": ["node_modules", "dist"]
}

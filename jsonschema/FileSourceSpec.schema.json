{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/FileSourceSpec",
    "definitions": {
        "FileSourceSpec": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "random": {
                    "$ref": "#/definitions/pfsload.RandomFileSourceSpec",
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "File Source Spec"
        },
        "pfsload.RandomDirectorySpec": {
            "properties": {
                "depth": {
                    "$ref": "#/definitions/pfsload.SizeSpec",
                    "additionalProperties": false
                },
                "run": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Random Directory Spec"
        },
        "pfsload.RandomFileSourceSpec": {
            "properties": {
                "directory": {
                    "$ref": "#/definitions/pfsload.RandomDirectorySpec",
                    "additionalProperties": false
                },
                "sizes": {
                    "items": {
                        "$ref": "#/definitions/pfsload.SizeSpec"
                    },
                    "additionalProperties": false,
                    "type": "array"
                },
                "increment_path": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Random File Source Spec"
        },
        "pfsload.SizeSpec": {
            "properties": {
                "min_size": {
                    "type": "integer"
                },
                "max_size": {
                    "type": "integer"
                },
                "prob": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Size Spec"
        }
    }
}
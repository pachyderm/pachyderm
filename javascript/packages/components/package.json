  "scripts": {
    "build": "npm run clean && npm run build:src && npm run build:types",
    "build:src": "NODE_ENV=production webpack",
    "build:storybook": "build-storybook",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint '{src,cypress}/**/*.{ts,tsx}'",
    "lint:css": "stylelint 'src/**/*.module.css'",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "publish:storybook": "npm run build:storybook && netlify deploy --dir=storybook-static --prod",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "devDependencies": {
    "@pachyderm/config": "^0.3.2",
    "@storybook/addon-actions": "^6.1.1",

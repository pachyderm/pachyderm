{
  "pipeline": {
    "name": "reduce_group_by_hospital"
  },
  "description": "A pipeline that consolidates all lab results by hospital in one file.",
  "input": {
      "pfs": {
      "repo": "group_by_hospital",
      "branch": "master",
      "glob": "/*"
      }
 },
 "transform": {
  "cmd": [ "bash" ],
  "stdin": [ "set -x", "FILES=/pfs/group_by_hospital/*/*", "for f in $FILES", "do", "directory=`dirname $f`", "out=`basename $directory`",  "cat $f >> /pfs/out/${out}.txt", "done" ]
}
}
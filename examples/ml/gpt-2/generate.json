{
    "pipeline": {
        "name": "generate"
    },
    "description": "A pipeline that generates tweets based on the trained model.",
    "transform": {
        "image": "pachyderm/gpt-2-example:v6",
        "cmd": ["/generate.py"]
    },
    "input": {
        "pfs": {
            "repo": "train",
            "glob": "/*"
        }
    },
    "resource_limits": {
        "gpu": {
            "type": "nvidia.com/gpu",
            "number": 1
        },
        "memory": "15G",
        "cpu": 1
    },
    "resource_requests": {
        "memory": "15G",
        "cpu": 1
    },
    "standby": true
}

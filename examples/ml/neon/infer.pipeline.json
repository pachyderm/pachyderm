{
  "pipeline": {
    "name": "inference"
  },
  "description": "An inference pipeline that makes a prediction based on the trained model and the data in the `reviews` repo.",
  "transform": {
    "image": "dwhitena/neon-inference",
    "cmd": [
      "python",
      "examples/imdb/auto_inference.py",
      "--model_weights",
      "/pfs/model/imdb.p",
      "--vocab_file",
      "/pfs/model/imdb.vocab",
      "--review_files",
      "/pfs/reviews",
      "--output_dir",
      "/pfs/out"
    ]
  },
  "parallelism_spec": {
    "constant": "2"
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "repo": "reviews",
          "glob": "/*"
        }
      },
      {
        "pfs": {
          "repo": "model",
          "glob": "/"
        }
      }
    ]
  }
}

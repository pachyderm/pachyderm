{
  "rules": {
    "selector-class-pattern": [
      "^(cm-)?[a-z][a-zA-Z0-9]+$",
      {"resolveNestedSelectors": true, "severity": "warning"}
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ]
  },
  "extends": ["stylelint-config-recommended", "stylelint-config-prettier"]
}
